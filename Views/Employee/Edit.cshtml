@model Demo.BL.Models.EmployeeVM
@{
    ViewData["Title"] = "Edit";
}

<div class="block-header">
    <h2>Edit New Employee</h2>
</div>
@section List {
    <link href="~/plugins/bootstrap-select/css/bootstrap-select.css" rel="stylesheet" />
}

<form class="form-group" asp-controller="Employee" asp-action="Edit" enctype="multipart/form-data">

    <div asp-validation-summary="All" class="text-danger"></div>



    <label asp-for="Name">Employee Name</label>
    <input type="text" class="form-control" asp-for="Name" />
    <span asp-validation-for="Name" class="text-danger"></span>
    <br />
    <label asp-for="Gender">Employee Gender</label>
    <input type="text" class="form-control" asp-for="Gender" />
    <span asp-validation-for="Gender" class="text-danger"></span>
    <br />
    <label asp-for="Religion">Employee Religion</label>
    <input type="text" class="form-control" asp-for="Religion" />
    <span asp-validation-for="Religion" class="text-danger"></span>
    <br />
    <label asp-for="Address">Employee Address</label>
    <input type="text" class="form-control" asp-for="Address" />
    <span asp-validation-for="Address" class="text-danger"></span>
    <br />
    <label asp-for="Salary">Employee Salary</label>
    <input type="text" class="form-control" asp-for="Salary" />
    <span asp-validation-for="Salary" class="text-danger"></span>
    <br />
    <label asp-for="HireDate">Employee HireDate</label>
    <input type="text" class="form-control" asp-for="HireDate" />
    <span asp-validation-for="HireDate" class="text-danger"></span>
    <br />
    <label asp-for="Email">Employee Email</label>
    <input type="text" class="form-control" asp-for="Email" />
    <span asp-validation-for="Email" class="text-danger"></span>
    <br />
    <label asp-for="Notes">Employee Notes</label>
    <textarea type="text" class="form-control" asp-for="Notes"></textarea>
    <span asp-validation-for="Notes" class="text-danger"></span>
    <br />
    <div class="demo-checkbox">
        <input type="checkbox" asp-for="IsActive" checked="" />
        <label asp-for="IsActive">IsActive</label>
        <span asp-validation-for="IsActive" class="text-danger"></span>
    </div>
    <br />
    <select asp-for="DepartmentId" asp-items="(SelectList)ViewBag.DL">
        <option>Choose Department</option>
    </select>
    <br />
    <label asp-for="Img">Img</label>
    <input type="file" class="form-control" asp-for="Img" />
    <img src="~/Files/Imgs/@Model.PhotoName" width="200" height="200" />
    <br />
    <label asp-for="CV">CV</label>
    <input type="file" class="form-control" asp-for="CV" />
    <br />

    <center>
        <a asp-controller="Employee" asp-action="Index" class="btn btn-primary">Back To Data</a>
        <a asp-controller="Employee" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
        <input type="submit" value="Edit" class="btn btn-primary" />
        <input type="reset" value="Cancle" class="btn btn-danger" />
    </center>

</form>


@section MicrosoftValidation{
    <script src="~/plugins/jquery-validation/jquery.validate.js"></script>
    <script src="~/plugins/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

